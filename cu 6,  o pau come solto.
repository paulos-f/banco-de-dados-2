create or alter PROCEDURE pr_media (@m1 int, @m2 int, @m3 int,@m4  int) as BEGIN        DECLARE @media numeric (8,2)        SELECT @media = (@m1 + @m2 + @m3 + @m4) / 4         SELECT @media as resultadoENDgoEXECUTE pr_media 7,1,9,10

